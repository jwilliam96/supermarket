model Product {
  id          String   @id @default(uuid())
  image       String
  title       String
  description String
  category    String
  subCategory String
  offer       Boolean
  price       Decimal
  stock       Int
  ventas      Decimal?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
